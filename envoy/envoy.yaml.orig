static_resources:
  listeners:
  - address:
      socket_address: { address: 0.0.0.0, port_value: 50051}
    filter_chains:
    - filters:
      - name: envoy.filters.network.http_connection_manager
        config:
          codec_type: http2
          stat_prefix: ingress_grpc
          http2_protocol_options: {}
          route_config:
            name: local_route
            virtual_hosts:
            - name: backend
              domains:
              - "*"
              routes:
              - match:
                  prefix: "/"
                  grpc: {}
                route:
                  cluster: backend_grpc_service
                  timeout:
                    seconds: 0
                    nanos: 0
          http_filters:
          - name: envoy.filters.http.router
            config: {}
  clusters:
  - name: backend_grpc_service
    type: strict_dns
    connect_timeout: 0.25s
    lb_policy: round_robin
    http2_protocol_options: {}
    hosts:
      socket_address: { address: server, port_value: 50051 }
admin:
  access_log_path: "/dev/null"
  address:
    socket_address: { address: 0.0.0.0, port_value: 9000 }
